<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spot_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/spot_card_background"
    android:paddingHorizontal="16dp"
    android:paddingVertical="14dp">

    <!-- Row 1: Callsign and Time -->
    <TextView
        android:id="@+id/tvCallsign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTime"
        tools:text="QQABC" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#909090"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCallsign"
        tools:text="12:34" />

    <!-- Row 2: Signal details -->
    <LinearLayout
        android:id="@+id/row_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCallsign">

        <TextView
            android:id="@+id/tvGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textColor="#C0C0C0"
            tools:text="EM89" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/separator_dot" />

        <TextView
            android:id="@+id/tvPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textColor="#C0C0C0"
            tools:text="37 dBm" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/separator_dot" />

        <TextView
            android:id="@+id/tvSnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textColor="#C0C0C0"
            tools:text="+12 dB" />

    </LinearLayout>

    <!-- Row 3: Nahoft status (only for Nahoft spots) -->
    <LinearLayout
        android:id="@+id/row_nahoft_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_details"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvPartNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/caribbeanGreen"
            android:textStyle="bold"
            tools:text="Part 2 of 3" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/separator_dot" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#C0C0C0"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="âœ“ Decrypted" />

    </LinearLayout>

    <!-- Hidden views for adapter compatibility -->
    <View
        android:id="@+id/viewAccentBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewGroupConnector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>